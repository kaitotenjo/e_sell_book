<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Orders</h4>
            <div class="table-responsive pt-3">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>
                      ID
                    </th>
                    <th>
                      user_id
                    </th>
                    <th>
                      subtotal
                    </th>
                    <th>
                      total 
                    </th>
                    <th>
                      status
                    </th>
                    <th>
                      action
                    </th>

                  </tr>
                </thead>
                <tbody>
                  <% @admins_orders.each do |order|%>
                    <tr>
                      <td>
                        <%= order.id%>
                      </td>
                      <td>
                        <%= order.user.id%>
                      </td>
                      <td>
                        <%= order.subtotal%>
                      </td>
                      <td>
                        <%= order.subtotal%>
                      </td>
                      <td>
                      <% if order.status=="pending"%>
                        <label class="badge badge-danger">Pending</label>
                      <%else%>
                        <label class="badge badge-success">Completed</label>
                      <%end%>
                      </td>
                      <td>
                      <%= link_to "edit", edit_admins_order_path(order),class:"btn btn-success" %>
                      <%= button_to "delete", admins_order_path(order),method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}},class:"btn btn-danger" %>
                      </td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>