<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
          <%= link_to "add",new_admins_product_path,class:"btn btn-success add-user" %>
            <h4 class="card-title">Products</h4>
            <div class="table-responsive pt-3">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>
                      ID
                    </th>
                    <th>
                      image
                    </th>
                    <th>
                      name
                    </th>
                    <th>
                      Price
                    </th>
                    <th>
                      Amount
                    </th>
                    <th>
                      status
                    </th>
                    <th>
                      action
                    </th>

                  </tr>
                </thead>
                <tbody>
                  <% @products.each do |product|%>
                    <tr>
                      <td>
                        <%= product.id%>
                      </td>
                      <td>
                        <%=image_tag(product.image)%>
                      </td>
                      <td>
                        <%= product.name%>
                      </td>
                      <td>
                        <%= product.price%>
                      </td>
                      <td>
                        <%= product.amount%>
                      </td>
                      <td>
                      </td>
                      <td>
                      <%= link_to "edit", edit_admins_product_path(product),class:"btn btn-success" %>
                      <%= button_to "delete", admins_product_path(product),method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}},class:"btn btn-danger" %>
                      </td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
              <div class="product__pagination">
                <%= paginate @products , theme: 'twitter-bootstrap-3' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>